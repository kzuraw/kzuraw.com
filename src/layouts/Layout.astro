---
import Meta from "@/components/Meta.astro";
import ThemeSwitcher from "@/components/ThemeSwitcher.astro";

import "@/styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <slot name="meta">
      <Meta title="Krzysztof Żuraw" />
    </slot>
    <script is:inline>
      // Determine theme before page renders to prevent flash of wrong theme
      // Note: This logic is duplicated from src/lib/theme.ts because
      // is:inline scripts cannot import modules

      const storedTheme = localStorage.theme;
      const systemPrefersDark = window.matchMedia(
        "(prefers-color-scheme: dark)",
      ).matches;

      let isDark = false;

      if (storedTheme === "dark") {
        // User explicitly chose dark mode
        isDark = true;
      } else if (storedTheme === "light") {
        // User explicitly chose light mode
        isDark = false;
      } else {
        // No preference stored - follow system preference
        isDark = systemPrefersDark;
      }

      document.documentElement.dataset.theme = isDark ? "dark" : "light";
    </script>
  </head>
  <body
    class="min-h-screen bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors"
  >
    <div class="max-w-2xl mx-auto px-6 py-16">
      <header class="mb-12">
        <nav
          class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-6"
        >
          <p class="text-2xl font-semibold text-gray-900 dark:text-gray-100">
            Krzysztof Żuraw
          </p>
          <ul class="flex items-center space-x-6">
            <li>
              <a href="/" class="hover:opacity-70 transition-opacity">Home</a>
            </li>
            <li>
              <a href="/blog" class="hover:opacity-70 transition-opacity"
                >Blog</a
              >
            </li>
            <li>
              <a href="/rss.xml" class="hover:opacity-70 transition-opacity"
                >RSS</a
              >
            </li>
          </ul>
        </nav>
      </header>
      <main>
        <slot name="content" />
      </main>
      <footer
        class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700 flex items-center justify-between text-sm text-gray-600 dark:text-gray-400"
      >
        <span>© Krzysztof Żuraw</span>
        <ThemeSwitcher />
      </footer>
    </div>
  </body>
</html>
